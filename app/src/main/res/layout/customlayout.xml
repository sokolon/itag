<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ProgressBar
        android:id="@+id/distanceBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Name" />

    <TextView
        android:id="@+id/textViewFar"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceBar"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="Far" />

    <TextView
        android:id="@+id/textViewNear"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="110dp"
        android:text="Near" />

    <TextView
        android:id="@+id/textViewAtBeacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewFar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:text="At beacon" />


</RelativeLayout>